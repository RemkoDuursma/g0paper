	keywords = {Adaptation, anticipation hypothesis, biomass enhancement, circadian clock, CO2, Gas exchange, genotype, memory, nocturnal transpiration, Stomata},
	pages = {3--11},
	file = {Full Text PDF:C\:\\Users\\30022860\\AppData\\Roaming\\Zotero\\Zotero\\Profiles\\x1re4v9p.default\\zotero\\storage\\AQD58NRR\\Resco de Dios et al. - 2016 - Genetic variation in circadian regulation of noctu.pdf:application/pdf;Snapshot:C\:\\Users\\30022860\\AppData\\Roaming\\Zotero\\Zotero\\Profiles\\x1re4v9p.default\\zotero\\storage\\F2PKSK2S\\abstract.html:text/html}
